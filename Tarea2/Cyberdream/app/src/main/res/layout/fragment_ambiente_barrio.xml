<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/titulo"
        android:text="Ambiente del barrio"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/neon_cyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Vista previa -->
    <FrameLayout
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="12dp"
        android:foreground="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/imgMapa"
            android:src="@drawable/map_old_downtown"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- Capa de ambiente (color/niebla/lluvia) -->
        <View
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"/>

        <!--  Lluvia animada -->
        <com.example.cyberdream.ui.barrio.RainView
            android:id="@+id/rain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>


    </FrameLayout>

    <!-- Controles -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/chkNiebla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niebla"
                android:textColor="@android:color/white"/>

            <CheckBox
                android:id="@+id/chkLluvia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Lluvia"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/lblIntensidad"
            android:text="Intensidad: 50%"
            android:layout_marginTop="12dp"
            android:textColor="#A0FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <SeekBar
            android:id="@+id/seekIntensidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"/>

        <TextView
            android:id="@+id/estado"
            android:text="Estado: noche limpia"
            android:layout_marginTop="12dp"
            android:textColor="#A0FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>