<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgMapaBarrio"
        android:src="@drawable/map_old_downtown"
        android:scaleType="centerCrop"
        android:layout_width="match_parent" android:layout_height="match_parent"/>

    <!-- Marcadores (posicionados con margins relativos al diseño) -->
    <ImageButton
        android:id="@+id/poiAfterlife"
        android:layout_width="44dp" android:layout_height="44dp"
        android:layout_gravity="top|start"
        android:layout_marginTop="140dp" android:layout_marginStart="64dp"
        android:background="@drawable/cy_poi_dot"
        android:contentDescription="Afterlife" />

    <ImageButton
        android:id="@+id/poiEstacion"
        android:layout_width="44dp" android:layout_height="44dp"
        android:layout_gravity="center"
        android:background="@drawable/cy_poi_dot_pink"
        android:contentDescription="Estación Fantasma" />

    <ImageButton
        android:id="@+id/poiMods"
        android:layout_width="44dp" android:layout_height="44dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="120dp" android:layout_marginEnd="56dp"
        android:background="@drawable/cy_poi_dot"
        android:contentDescription="Callejón de Mods" />
</FrameLayout>